<project name="build-plugin-package" default="build" >
   <description>
       Creates the plugin package folder from fd-huawei-vcenter-plugin-ui and fd-huawei-vcenter-plugin-service:
             fdvcenterpluginui
                  plugin-package.xml
                  /plugins
                     fd-huawei-vcenter-plugin-ui.war
                     fd-huawei-vcenter-plugin-service.jar

   </description>

   <property environment="env"/>
   <property name="VSPHERE_SDK_HOME" value="${env.VSPHERE_SDK_HOME}"/>
   <property name="BUILD_DIR" value="${basedir}/target"/>
   <property name="SERVICE_DIR" value="${basedir}/../fd-huawei-vcenter-plugin-service"/>

   <target name="build" depends="buildUiWar, buildServiceJar, createPluginPackageDir"/>

   <target name="buildUiWar">
      <ant antfile="${basedir}/build-war.xml" dir="${basedir}" inheritAll="false"/>
   </target>

   <target name="buildServiceJar">
      <ant antfile="${SERVICE_DIR}/build-java.xml" dir="${SERVICE_DIR}" inheritAll="false"/>
   </target>

   <target name="createPluginPackageDir">
      <mkdir dir="${BUILD_DIR}/fdvcenterpluginui" />
      <mkdir dir="${BUILD_DIR}/fdvcenterpluginui/plugins" />
      <copy todir="${BUILD_DIR}/fdvcenterpluginui" file="plugin-package.xml"/>
      <copy todir="${BUILD_DIR}/fdvcenterpluginui/plugins" file="${BUILD_DIR}/fd-huawei-vcenter-plugin-ui.war"/>
      <copy todir="${BUILD_DIR}/fdvcenterpluginui/plugins" file="${SERVICE_DIR}/target/fd-huawei-vcenter-plugin-service.jar"/>
   </target>

</project>