<?xml version="1.0" encoding="UTF-8"?>

<!--
   fdvcenterpluginui plugin metadata.
   The <plugin> tag doesn't contain any moduleUri property because it is an HTML plugin.
-->

<plugin id="com.huawei.fdvcenterpluginui.fdvcenterpluginui"
      defaultBundle="com_huawei_fdvcenterpluginui">

   <resources>
      <resource locale="{locale}">
         <module uri="locales/fd-huawei-vcenter-plugin-ui-{locale}.swf"/>
      </resource>
   </resources>

   <dependencies>
      <!-- Allow HTML Client to display plugin icons in menus, shortcuts, object lists -->
      <dependency type="css" uri="fdvcenterpluginui/assets/css/plugin-icons.css" />
   </dependencies>

    <!-- Home view shortcut -->

   <extension id="com.huawei.fdvcenterpluginui.homeShortcut">
      <extendedPoint>vise.home.shortcuts</extendedPoint>
      <object>
         <name>#{app.name}</name>
         <icon>#{appIcon}</icon>
         <!--<categoryUid>vsphere.core.controlcenter.monitoringCategory</categoryUid>-->
         <categoryUid>vsphere.core.controlcenter.administrationCategory</categoryUid>
         <targetViewUid>com.huawei.fdvcenterpluginui.mainView</targetViewUid>
      </object>
   </extension>

   <!-- Main view -->

   <extension id="com.huawei.fdvcenterpluginui.mainView">
      <extendedPoint>vise.global.views</extendedPoint>
      <object>
         <name>#{app.name}</name>
         <componentClass className="com.vmware.vsphere.client.htmlbridge.HtmlView">
            <object>
               <root>
                  <url>/vsphere-client/fdvcenterpluginui/resources/mainView.html</url>
               </root>
            </object>
         </componentClass>
      </object>
   </extension>

   <extension id="com.huawei.fdvcenterpluginui.summaryview">
      <extendedPoint>vsphere.core.host.monitorViews</extendedPoint>
      <object>
         <name>#{tab.name}</name>
         <componentClass className="com.vmware.vsphere.client.htmlbridge.HtmlView">
            <object>
               <root>
                  <url>/vsphere-client/fdvcenterpluginui/resources/serverInfo.html</url>
               </root>
            </object>
         </componentClass>
      </object>
   </extension>

</plugin>
